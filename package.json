{
  "name": "quantum-bsc-sniper",
  "version": "1.1.0",
  "description": "Quantum Sniper — BSC Memecoin Scanner, Telegram Bot, Anti-Rug AI, Dexscreener Integration, Mempool Monitor, and Sniper Trading Engine.",
  "type": "module",
  "main": "api/server.js",
  "scripts": {
    "build": "echo 'No build required for pure Node.js project'",
    "prestart": "npm ci",
    
    "dev": "concurrently \"npm:dev:api\" \"npm:dev:scanner\" \"npm:dev:bot\"",
    "dev:api": "nodemon --watch api --ext js api/server.js",
    "dev:scanner": "nodemon --watch scanner --ext js scanner/index.js",
    "dev:bot": "nodemon --watch telegram --ext js telegram/bot.js",
    
    "start": "node telegram/bot.js",
    "start:api": "node api/server.js",
    "start:scanner": "node scanner/index.js",
    "start:bot": "node telegram/bot.js",
    
    "clean": "rm -rf node_modules package-lock.json",
    "reinstall": "npm run clean && npm install",
    
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    
    "lint": "eslint . --ext .js,.mjs",
    "format": "prettier --write .",
    
    "check-env": "node -e \"['TELEGRAM_BOT_TOKEN','BSC_RPC','BSC_RPC_2','BSC_RPC_3','PRIVATE_KEY'].forEach(k=>{if(!process.env[k]) console.warn(`⚠️ Missing ${k}`)})\""
  },
  "dependencies": {
    "axios": "^1.7.2",
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.1",
    "express": "^4.19.2",
    "helmet": "^7.0.0",
    "fs-extra": "^11.2.0",
    "node-cron": "^3.0.3",
    "p-queue": "^7.4.1",
    "pino": "^9.0.0",
    "express-rate-limit": "^7.0.0",
    "pino-pretty": "^10.3.1",
    "sqlite3": "^5.1.7",
    "telegraf": "^4.16.3",
    "ws": "^8.17.0",
    "undici": "^6.10.0",
    "eventemitter3": "^5.0.1",
    "node-cache": "^5.1.2",
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "eslint": "^8.52.0",
    "prettier": "^3.4.0",
    "eslint-config-prettier": "^9.0.0"
  },
  "overrides": {
    "glob": "^8.1.0",
    "tar": "^6.1.0",
    "inflight": "^1.0.6",
    "are-we-there-yet": "^5.0.2",
    "rimraf": "^4.1.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "bsc",
    "sniper-bot",
    "memecoin",
    "anti-rug",
    "dexscreener",
    "geckoterminal",
    "sniper",
    "trading-bot",
    "telegram-bot",
    "mempool",
    "web3",
    "ethers",
    "quantum-sniper"
  ],
  "author": "Boss Destiny — Quantum Sniper Core Engineer",
  "license": "MIT"
  }
